<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./layouts/head.ejs') %> 
</head>
<body>
    <header>
        <%- include('./layouts/header.ejs') %> 

        <h1> Total : <%=characters.length  %> </h1>
    </header>
    <main>
        <% characters.forEach(character => {%> 
            <section>

                <h1><%= character.name %> </h1>
                <h2><%= character.house %> </h2>
                <p><%= character.patronus %> </p>
                <p><%= character.alive %> </p>
    
                <a href="/character/<%= character.id  %> "> view details </a>
            </section>
                <% })  %> 
    </main>
    
</body>
</html>